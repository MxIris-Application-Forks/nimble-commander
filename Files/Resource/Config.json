{
    /**
     * General stuff
     */
    "general": {
        /**
         * Show/hide toolbar
         */
        "showToolbar": true,

        /**
         * Show/hide tabs bar
         */
        "showTabs": false
    },

    /**
     * Settings related to file panels, i.e. main application state
     */
    "filePanel": {

        "general": {
            
            "ignoreDirectoriesOnSelectionWithMask": true,

            "showLocalizedFilenames": true,
            
            "showDotDotEntry": true,
  
            "showVolumeInformationBar": true,

            "useTildeAsHomeShortcut": true,

            "appendOtherWindowsPathsToGoToMenu": true,
            
            "showNetworkConnectionsInGoToMenu": true,
            
            "maximumNetworkConnectionsInGoToMenu": 5,

            "allowDraggingIntoFolders": true,
  
            "goToButtonForcesPanelActivation": true,

            "archivesExtensionsWhitelist": "zip, tar, pax, cpio, xar, lha, ar, cab, mtree, iso, bz2, gz, bzip2, gzip, 7z, rar",
            
            "executableExtensionsWhitelist": "sh, pl, rb, py",

            /**
             * Size format for current file, integer enumeration:
             * 1 - 2536 K
             * 2 - 2,5 MB
             */
            "fileSizeFormat": 1,
            
            /**
             * Size format for total selection, integer enumeration:
             * 0 - 2 597 065 bytes
             * 1 - 2536 K
             * 2 - 2,5 MB
             * 3 - 2,48 MB
             */
            "selectionSizeFormat": 0,
  
            "routeKeyboardInputIntoTerminal": false,
            
            /**
             * Default algorithm to calculate file's checksum, possible values:
             * Adler32, CRC32, MD2, MD4, MD5, SHA1-160, SHA2-224, SHA2-256, SHA2-384, SHA2-512.
             */
            "checksumCalculationAlgorithm": "MD5",
            
            /**
             * Limit maximum rate of views redrawing, zero is no limit
             */
            "maxFPS": 60,
  
            "bottomGapForOverlappedTerminal": 0
        },
        
        /**
         * Section about QuickSearch - instant search for filenames in current panel by typing
         */
        "quickSearch": {
            /**
             * Enable quick search typing prompt
             */
            "typingView": true,

            /**
             * Should filtering show only matching filenames(false) or should it only focus matching filenames in whole panel(true)
             */
            "softFiltering": true,
            
            /**
             * Where to find a piece of text in filename, integer enumeration:
             * 0 - Anywhere
             * 1 - Beginning
             * 2 - Ending
             * 3 - BeginningOrEnding
             */
            "whereToFind": 0,
  
            /**
             * Key option to activate quick search by typing, integer enumeration:
             * 0 - ⌥, type filename part with Alt key
             * 1 - ⌃⌥, type filename part with Ctrl+Alt keys
             * 2 - ⇧⌥, type filename part with Shift+Alt keys
             * 3 - no modifiers required
             * 4 - quick search is disabled
             */
            "keyOption": 3            
        },
        
        /**
         * Settings related to modern presentation mode
         */
        "modern": {
            /**
             * Icons mode, integer enumeration
             * 0 - Generic file/directory icons only
             * 1 - Icons based on file types
             * 2 - Thumbnails based on file content
             */
            "iconsMode": 2,
            
            "fontSize": 13,

            "regularBackground": "#FDFFFF",
            
            "alternativeBackground": "#F2F2F2",
            
            "columnDivider": "#E0E0E0",
            
            "activeCursor": "#0C50D0",
            
            "inactiveCursor": "#D4D4D4",
            
            "coloringRules_v1": [
                                 {
                                 "name": "selected",
                                    "regular": "#FF0000",
                                    "focused": "#FF0000",
                                    "filter": {
                                        "selected": true
                                    }
                                 },
                                 {
                                    "name": "hidden",
                                    "regular": "#666666",
                                    "focused": "#999999",
                                    "filter": {
                                        "hidden": true
                                    }
                                 },
                                 {
                                    "name": "other",
                                    "regular": "#000000",
                                    "focused": "#FFFFFF"
                                 }
            ]
        },
        
        /**
         * Settings related to classic presentation mode
         */
        "classic": {
            
            "regularBackground": "#000080",
            
            "cursorBackground": "#008080",
            
            "textColor": "#00FFFF",
            
            "activeTextColor": "#000000",
            
            "highlightTextColor": "#FFFF00",
            
            "coloringRules_v1": [
                                 {
                                    "name": "selected",
                                    "regular": "#FFFF00",
                                    "focused": "#FFFF00",
                                    "filter": {
                                        "selected": true
                                    }
                                 },
                                 {
                                    "name": "hidden",
                                    "regular": "#008080",
                                    "focused": "#808080",
                                    "filter": {
                                        "hidden": true
                                    }
                                 },
                                 {
                                    "name": "regular files",
                                    "regular": "#00FFFF",
                                    "focused": "#000000",
                                    "filter": {
                                        "reg": true
                                    }
                                 },
                                 {
                                    "name": "directories",
                                    "regular": "#FFFFFF",
                                    "focused": "#FFFFFF",
                                    "filter": {
                                    "directory": true
                                    }
                                 },
                                 {
                                    "name": "other",
                                    "regular": "#FF0000",
                                    "focused": "#FF0000"
                                 }
            ]
        }
    },
    
    /**
     * Settings related to terminal emulator
     */
    "terminal": {
        /**
         * Limit maximum rate of view redrawing, zero is no limit
         */
        "maxFPS": 60,
  
        "hideVerticalScrollbar": false,
        
        /**
         * Cursor drawing mode, integer enumeration:
         * 0 - Block,
         * 1 - Underline,
         * 2 - Vertical bar
         */
        "cursorMode": 0,
        
        /**
         * Basic colors:
         */
        "textColor":        "#BFBFBF",
        "boldTextColor":    "#E5E5E5",
        "backgroundColor":  "#000000",
        "selectionColor":   "#E5E5E5",
        "cursorColor":      "#666666",
        
        /**
         * 16 ANSI colors:
         */
        "AnsiColor0":  "#000000", // black
        "AnsiColor1":  "#990000", // red
        "AnsiColor2":  "#00A600", // green
        "AnsiColor3":  "#999900", // yellow
        "AnsiColor4":  "#0000B2", // blue
        "AnsiColor5":  "#B200B2", // magenta
        "AnsiColor6":  "#00A6B2", // cyan
        "AnsiColor7":  "#BFBFBF", // white
        "AnsiColor8":  "#666666", // bright black
        "AnsiColor9":  "#E50000", // bright red
        "AnsiColor10": "#00D900", // bright green
        "AnsiColor11": "#E5E500", // bright yellow
        "AnsiColor12": "#0000FF", // bright blue
        "AnsiColor13": "#E500E5", // bright magenta
        "AnsiColor14": "#00E5E5", // bright cyan
        "AnsiColor15": "#E5E5E5"  // bright white
    }
}
